            </if>
            <if test="pushDeviceToken != null">
                DELETE_FLAG = #{deleteFlag,jdbcType=VARCHAR},
            </if>
        </set>
        WHERE
            CHAT_ROOM_ID = #{chatRoomId,jdbcType=VARCHAR}
    </update>

    <update id="delete" parameterType="hashMap">
        UPDATE T_CHAT_ROOM
